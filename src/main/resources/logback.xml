<configuration debug="true" scan="true" scanPeriod="30 seconds">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{d.M.yy HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="won.spoco" level="ERROR"/>

    <logger name="won.bot" level="ERROR"/>
    <logger name="won.bot.framework.bot" level="ERROR"/>
    <logger name="won.bot.framework.manager.impl" level="ERROR"/>
    <logger name="won.bot.framework.component.atomconsumer" level="ERROR"/>
    <logger name="org.springframework.aop" level="ERROR"/>
    <logger name="won.bot.framework.eventbot.listener" level="ERROR"/>
    <logger name="won.bot.framework.eventbot.action.impl.mail" level="ERROR"/>
    <!-- set to DEBUG to get monitoring stats in the log file -->
    <logger name="won.monitoring" level="ERROR"/>

    <!-- START MSGTRACE: set the following to DEBUG to trace messages through the system (high level) -->
    <logger name="won.node.protocol.impl.NeedProtocolNeedClient" level="ERROR"/>
    <logger name="won.node.protocol.impl.NeedProtocolNeedServiceImpl" level="ERROR"/>
    <logger name="won.node.protocol.impl.OwnerProtocolOwnerClient" level="ERROR"/>
    <logger name="won.owner.protocol.impl.OwnerProtocolNeedServiceClient" level="ERROR"/>
    <logger name="won.owner.messaging.OwnerProtocolOwnerServiceImpl" level="ERROR"/>
    <!-- END MSGTRACE -->

    <!-- SET to DEBUG to see bot events -->
    <logger name="won.bot.framework.eventbot.bus.impl.AsyncEventBusImpl" level="ERROR"/>
    <!-- SET to DEBUG to see bot event listeners -->
    <logger name="won.bot.framework.eventbot.listener" level="ERROR"/>

    <!-- SET to DEBUG to see more info about atom creation -->
    <logger name="won.bot.framework.component.atomproducer" level="ERROR"/>

    <!-- Temporal -->
    <logger name="won.bot.impl.BAAtomicCCAdditionalParticipants" level="ERROR" />
    <logger name="won.bot.impl.BAAtomicCCActiveExitingBot" level="ERROR" />
    <logger name="won.protocol.util.linkeddata.CachingLinkedDataSource" level="ERROR"/>

    <root level="ERROR">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>